<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:hint="Restaurant"
        android:paddingTop="60dp"
        android:text="ABC Kitchen"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/textView20"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35 E 18th st Ny,ny"
        android:id="@+id/textView33"
        android:textSize="25dp"
        android:textColor="#ffa500" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Does it fit your budget?"
        android:id="@+id/textView13"
        android:paddingTop="50dp"
        android:textSize="25dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Meal:$20
This store fits perfectly in your  budget"
        android:id="@+id/textView19"
        android:textSize="25dp"
        android:paddingTop="30dp"
        android:textColor="#ffa500" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: ABC kitchen is a fancy restaurant with a variety of simple but satisfying foods, and a nice interior decoration"
        android:id="@+id/textView14"
        android:paddingTop="50dp"
        android:textSize="25dp"
        android:textColor="#FF4500" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rating:"
        android:id="@+id/textView15"
        android:paddingTop="40dp"
        android:fontFamily="@string/abc_font_family_button_material"
        android:textSize="25dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:rating="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download the menu"
        android:id="@+id/textView16"
        android:paddingTop="50dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:fontFamily="20" />

    <TextView
    android:id="@+id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/menu"
        android:textSize="20dp"
        android:linksClickable="true"
        android:autoLink="all"/>
</LinearLayout>

   </ScrollView>
